<div class="container text-black-50 bg-light py-4 my-sm-5 shadow-sm">
  <h3>ログイン</h3>
  <div class="border-bottom border-primary d-block mb-3"></div>
  <%= form_for :session, url: login_path do |f| %>
    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレスを入力" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :パスワード, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password, class: "form-control mb-2", placeholder: "パスワードを入力" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">ログインする >></button>
      </div>
    </div>
  <% end %>
  <%= link_to '新規登録の方はこちら', new_user_path ,class: 'text-black-50' %>
</div>